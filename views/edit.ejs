<%- include("partials/header") -%>

<div class="ui segment main text container" style="margin-top: 7rem;">
    <div class="ui huge header">Edit <%=blog.title%></div>
    <form class="ui form" action="/blogs/<%= blog._id%>" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="title" value="<%=blog.title%>">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="image" value="<%=blog.image%>">
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea name="content"><%= blog.content%></textarea>
        </div>
        <button class="ui violet big basic button">Submit</button>
    </form>
</div>

<%- include("partials/footer") -%>
